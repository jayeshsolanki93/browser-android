<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.SettingsTheme" parent="Theme.AppCompat.Light">

        <!-- customize the color palette -->
        <!-- item name="android:windowBackground">@null</item -->
        <item name="toolbarSettingsBackground">@drawable/toolbar_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color_settings</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="dividerColor">@color/divider_light</item>
    </style>

    <style name="Theme.LightTheme" parent="Theme.AppCompat.Light">

        <!-- customize the color palette -->
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="progressColor">@color/gray_medium</item>
        <item name="numberColor">@color/gray_dark</item>
        <item name="autoCompleteTitleColor">@color/black</item>
        <item name="autoCompleteUrlColor">@color/gray_medium</item>
        <item name="actionOverflowButtonStyle">@style/overFlowButtonStyle</item>
        <item name="dividerColor">@color/divider_light</item>
        <item name="selectedBackground">@drawable/list_bg_light</item>
    </style>

    <style name="Theme.LightTheme.Incognito" parent="Theme.LightTheme">
        <item name="colorPrimary">@color/incognito_tab_primary_color</item>
        <item name="colorPrimaryDark">@color/incognito_tab_primary_color_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Cliqz.Suggestions" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#55B046</item>
    </style>

    <style name="Theme.Cliqz.Overview" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorPrimaryDisableOnly">#9fff</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/text_color_primary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.Cliqz.ActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_clear_white</item>
    </style>

    <style name="overFlowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="editTextNormal" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="editTextIncognito" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">#333333</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="popupMenu.textViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:color">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="Theme.ControlCenter.Dialog"  parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="selectableItemBackground">@color/primary_color</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="Theme.ControlCenter.Dialog.Incognito"  parent="Theme.ControlCenter.Dialog">
        <item name="selectableItemBackground">@color/incognito_tab_primary_color</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/incognito_tab_primary_color</item>
    </style>

    <style name="Theme.ControlCenter.Fragment" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="controlCenterBackground">#ffffff</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="colorSecondary">#97A4AE</item>
    </style>

    <style name="Theme.ControlCenter.Fragment.Incognito" parent="Theme.ControlCenter.Fragment">
        <item name="textColorPrimary">@color/white</item>
        <item name="controlCenterBackground">#000000</item>
    </style>

    <style name="Theme.Cliqz.Semitrasparent.FullScreen.Dialog" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@color/topsites_background</item>
    </style>

    <style name="Widget.Cliqz.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="colorControlNormal">@color/text_color_primary</item>
    </style>
    <style name="Widget.Cliqz.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/primary_color</item>
    </style>

    <style name="Widget.Cliqz.TabsDeckView" parent="">
        <item name="remainderSize">15dp</item>
    </style>

    <!-- Lumen -->
    <style name="tab_layout_style">
        <item name="tabTextAppearance">@style/tab_layout_text_style</item>
        <item name="android:background">@android:color/black</item>
        <item name="tabSelectedTextColor">@color/bond_general_color_blue</item>
        <item name="tabTextColor">@color/bond_disabled_text_color</item>
        <item name="tabIndicatorColor">@color/bond_general_color_blue</item>
    </style>

    <style name="tab_layout_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/bond_general_color_blue</item>
    </style>

    <style name="bond_dashboard_controls_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bond_general_color_blue</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
    </style>

    <style name="required_items">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dashboard_measurement_value">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dashboard_measurement_value_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dashboard_item" parent="required_items">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="dashboard_item_title" parent="dashboard_item">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/dashboard_item_title_size</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="dashboard_item_content" parent="dashboard_item">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/dashboard_item_content_size</item>
    </style>

</resources>
